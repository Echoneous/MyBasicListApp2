@model MyBasicListApp2.Models.DB.tblBasicList

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h1>Add To List</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group addgroup">
            @Html.LabelFor(model => model.InputDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InputDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InputDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group addgroup">
            @Html.LabelFor(model => model.InputItem, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InputItem, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InputItem, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group addgroup">
            @Html.LabelFor(model => model.InputImportance, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InputImportance, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InputImportance, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group addgroup">
            @Html.LabelFor(model => model.ItemCompletion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.ItemCompletion)
                    @Html.ValidationMessageFor(model => model.ItemCompletion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-1 addGroupButton">
                <input type="submit" value="Add" class="btn btn-link" />
            </div>
        </div>
        <div class="return col-md-3">
            @Html.ActionLink("Back to List", "MyToDoList", "Home")
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
