@model MyBasicListApp2.Models.ViewModel.emailForm

<div class="contactContainer">
    <div class="contactForm">
        <table class="contactTable">
            <tr>
                <td>
                    <div class="contactFormContainer">
                        <h3>Got something to say? Say it!</h3>
                        <hr />
                        <div class="sendEmailForm">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @Html.LabelFor(m => m.emailfirstName, new { @class = "control-Label" })
                                    <div>
                                        @Html.TextBoxFor(m => m.emailfirstName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.emailfirstName)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.emaillastName, new { @class = "control-label" })
                                    <div>
                                        @Html.TextBoxFor(m => m.emaillastName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.emaillastName)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.emailEmail, new { @class = "control-label" })
                                    <div>
                                        @Html.TextBoxFor(m => m.emailEmail, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.emailEmail)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.emailsubject, new { @class = "control-label" })
                                    <div>
                                        @Html.TextBoxFor(m => m.emailsubject, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.emailsubject)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.emailmessage, new { @class = "control-label" })
                                    <div>
                                        @Html.TextAreaFor(m => m.emailmessage, new { @class = "form-control test", @cols = 40, @rows = 10 })
                                        @Html.ValidationMessageFor(m => m.emailmessage)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2">
                                        <input type="submit" class="btn btn-default submitButton" value="Send" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </td>
                <td>
                    <div class="contactBanner">
                        <h1>FEEL FREE TO CONTACT ME WITH ANY QUESTIONS</h1>
                        <h4>You may get lucky and receive an answer</h4>
                    </div>
                    <table>
                        <tr>
                            <td>
                                <address class="address col-md-8">
                                    <h4>Address:</h4>
                                    <hr />
                                    31500 1st ave s
                                    Federal way, WA 98003
                                </address>
                                <div class="number col-md-8">
                                    <h4>Contact Number:</h4>
                                    <hr />
                                    <p>1.800.Devon.is.awesome</p>
                                    <p>Ext. Cool(2665)</p>
                                </div>
                            </td>
                            <td>
                                <div class="col-md-4 locationImage">
                                    <img src="~/Content/Images/location.png" width="150" height="150" />
                                </div>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>
</div>